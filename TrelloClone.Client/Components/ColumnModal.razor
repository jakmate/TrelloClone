@using TrelloClone.Shared.DTOs

<FormModal Show="@Show" 
           Title="Create New Column"
           Model="@ColumnModel"
           OnCancel="@OnCancel"
           OnSubmit="@OnSubmit"
           IsSubmitting="@IsSubmitting"
           SubmitText="Create Column">
    <div class="mb-3">
        <label for="columnTitle" class="form-label">Column Title</label>
        <InputText id="columnTitle" class="form-control" @bind-Value="ColumnModel.Title" />
    </div>
</FormModal>

@code {
    [Parameter] public bool Show { get; set; }
    [Parameter] public CreateColumnRequest ColumnModel { get; set; } = new();
    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public EventCallback<EditContext> OnSubmit { get; set; }
    [Parameter] public bool IsSubmitting { get; set; }
}