@using TrelloClone.Client.Models

<div class="card h-100 board-card">
    <div class="card-body">
        <h5 class="card-title">@Board.Name</h5>
        <p class="card-text text-muted">@Board.ColumnCount columns</p>
    </div>
    <div class="card-footer">
        <small class="text-muted">Click to open</small>
    </div>
</div>

<style>
    .board-card {
        cursor: pointer;
        transition: transform 0.2s;
    }

    .board-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
</style>

@code {
    [Parameter] public BoardDto Board { get; set; } = null!;
}